<!DOCTYPE html>
<html>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <title>All Toys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles for this page */
        .card {
            border: none;
            transition: transform 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-title {
            font-size: 1.2rem;
            margin-top: 10px;
        }

        .card-text {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .card-price {
            font-size: 1.1rem;
            color: #28a745;
        }

        .card-quantity {
            color: #dc3545;
        }

        .card-category {
            font-size: 0.9rem;
            color: #17a2b8;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">Admin Page</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#bs-example-navbar-collapse-1" aria-controls="bs-example-navbar-collapse-1"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-user"
                                aria-hidden="true"></i>
                            User Management</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li class="nav-item"><a class="nav-link" href="/admin/alltoys">Admin</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/boytoy">Customer</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center">All Toys</h1>
        <a class="btn btn-primary mb-3" href="/admin/alltoys/add"><i class="fa-solid fa-plus"></i> Add Toy</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Detail</th>
                    <th>Image</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each allToys }}
                <tr>
                    <td>{{ this.bname }}{{ this.gname }}{{ this.aname }}</td>
                    <td>{{ this.bcategory }}{{ this.gcategory }}{{ this.acategory }}</td>
                    <td>{{ this.bdetail }}{{ this.gdetail }}{{ this.adetail }}</td>
                    <td><img src="{{ this.bimage }}{{ this.gimage }}{{ this.aimage }}" alt="{{ this.bname }}{{ this.gname }}{{ this.aname }}"
                            width="100"></td>
                    <td>${{ this.bprice }}{{ this.gprice }}{{ this.aprice }}</td>
                    <td>{{ this.bquantity }}{{ this.gquantity }}{{ this.aquantity }}</td>
                    
                    <td>
                        <a class="btn btn-warning" href="/admin/alltoys/update/{{ this._id }}">
                            <i class="fa-regular fa-pen-to-square"></i> Update
                        </a>
                        <a class="btn btn-danger" href="/admin/alltoys/delete/{{ this._id }}"
                            onclick="return confirm('Are you sure to delete this toy?');">
                            <i class="fa-solid fa-trash"></i> Delete
                        </a>
                    </td>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>